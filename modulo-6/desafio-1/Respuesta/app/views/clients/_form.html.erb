  </div>

  <div class="mb-3">
    <%= form.label :age, style: "display: block", class: "form-label" %>
    <%= form.text_field :age, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :movie_id, "Movie", style: "display: block", class: "form-label" %>
    <%= form.collection_select :movie_id, Movie.all, :id, :name, { prompt: true }, { class: "form-select" } %>
  </div>

  <div class="mb-3">
    <%= form.submit(class: "btn btn-success w-100") %>
  </div>
<% end %>

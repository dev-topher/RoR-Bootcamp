<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center">Tweets</h1>
    </div>
  </div>
  <%= form_tag(tweets_path, method: :get) do %>
  <div class="row">
    <div class="col-md-10">
      <%= text_field_tag :search, params[:search], placeholder: "Buscar a travÃ©s de Usuario", class: "form-control"%>
    </div>
    <div class="col-2">
      <%= submit_tag "Buscar", class: "btn btn-primary w-100" %>
    </div>
  </div>
  <% end %>
</div>

<div class="container">
  <p style="color: green"><%= notice %></p>
</div>

<div class="container">
  <div class="row">
    <% @tweets.each do |tweet| %>
      <div class="col-6">
        <%= render tweet %>
        <p>
          <%= link_to "Muestra este tweet", tweet, class: "btn btn-info" %>
        </p>
      </div>
    <% end %>
  </div>

  <div class="pagination">
    <%= will_paginate @tweets %>
  </div>
</div>

<div class="container py-3">
  <div class="row">
    <div class="col-12">
      <%= link_to 'Agregar tweet', new_tweet_path, class:'btn btn-primary w-100' %>
    </div>    
  </div>
</div>